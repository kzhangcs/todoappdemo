<%= form_with(model: @todo_item, local: true,
url: [@todo_list, @todo_item]) do |form| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
        <% @todo_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :due_date %>
    <br>
    <%= form.text_field :due_date, 'data-behaviour' => 'datepicker' %>
  </div>

  <div class="field">
    <%= form.label :task_title %>
    <br>
    <%= form.text_field :task_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <br>
    <%= form.text_area :description, size: "40x12" %>
  </div>

  <% if controller.action_name == 'edit' %>
    <div class="field">
      <%= form.label "Task Completed" %>
      <br>
      <%= form.check_box :done %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

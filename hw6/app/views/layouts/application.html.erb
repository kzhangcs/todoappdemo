<!DOCTYPE html>
<html>
  <head>
    <title>Hw6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application'%>
  </head>

  <body>
    <% if logged_in? %>
      <div style='float: right;'>
        <%= link_to "Home", root_path %> |
        You are logged in as <%= link_to current_user.account.first_name, current_user.account %> |
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
    <% end %>

    <% flash.each do |key, value| %> <!-- todo delete from views -->
      <%= content_tag :p, value, id: key %>
    <% end %>

    <%= yield %>
  </body>
</html>
